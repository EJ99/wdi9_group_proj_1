<div class="content">

  <div class="box initial">
    <!-- To and From fields. -->
    <label for="title">Title</label>
    <select class="title" name="title">
      <% Title.all.each do |title| %>
      <option value="<%= title.id %>"> <%= title.name %></option>
      <% end %>
    </select>

<label for="recipient_name">To</label>
<input id="input_rn" name="recipient_name">

    <label for="recipient_email">Email</label>
    <input name="recipient_email">

    <label for="sign_off">From</label>
    <input name="sign_off">

    <button class="next">Next</button>
  </div>

  <div class="box">
    <!-- Category and Message Box -->
    <label for="category">Category</label>
    <select class="category" name="category">
      <% @categories = Favour.all.collect{ |f| f.category }.uniq %>
      <% @categories.each do |category| %>
      <option value="<%= category %>"> <%= category %></option>
      <% end %>
    </select>

    <label for="message">Favour</label>
    <select class="favour-choice" name="message">
      <% Favour.all.each do |favour| %>
      <option value="<%= favour.id %>"> <%= favour.message %> </option>
      <% end %>
    </select>
    <!-- <input id="choice-editor"name="favour-input"> -->

    <b2utton class="prev">Back</button>
    <button class="next">Next</button>
  </div>

  <div class="box">
    <!-- Background Color Box with Preview -->
    <label for="background_col">Background Colour</label>
    <input type="color" name="background_col" value="#46C1C2">


    <button class="prev">Back</button>
    <button class="next">Next</button>
  </div>


<div class="box">
    <!-- SEARCH BOX -->
    <input type="input" id="search_input" placeholder="categorysearch" value="">
    <button class="search_btn">SEARCH</button>

    <!-- SELECTED IMAGE  -->
    <div class="container">
        <div class="chosen-image"><img src=""/></div>
    </div>

    <!-- CAROUSEL -->
    <div class="image-results your-class"></div>
    <div class="space"></div>

    <button class="prev">Back</button>
    <button class="next">Preview</button>
</div>



  <div class="box">
    <!-- Preview Box -->
    <div class="preview">
      <div  style="background-color:<%= @card.background_col %>" class="background_col">
        <div class="background_img">
          <img height="400" width="600" src="<%= @card.background_img %>" />
          <div class="card-text">
            <div class="recipient_name"><%= @card.recipient_name %></div>
            <div class="card-title"><%= (Title.find(@card.title_id)).name %></div>
            <div class="card-message"><%= @card.message %></div>
          </div>
        </div>
      </div>
      <div class="sign_off"><%= @card.sign_off %></div>


    </div>
    <button class="prev">Back</button>
    <input type="submit" name="action" value="Save">
    <input type="submit" name="action" value="Save and Send">
  </div>


<script type="text/javascript">
  var recipient_email = <%= @card.recipient_email %>
  var recipient_name = <%= @card.recipient_name %>
  var title_id = <%= @card.title_id %>
  var sign_off = <%= @card.sign_off %>
  var message = <%= @card.message %>
  var background_img = <%= @card.background_img %>
  var background_col = <%= @card.background_col %>
</script>
