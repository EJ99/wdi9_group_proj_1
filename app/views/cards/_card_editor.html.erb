<div class="content">

  <div class="box initial">
    <!-- To and From fields. -->
    <!-- <label for="title">Title</label> -->
    <p>STEP ONE</p>
    <select class="input_t" name="title">
      <% Title.all.each do |title| %>
      <!-- <option value="" disabled selected>Choose a Title..</option> -->
      <option value="<%= title.id %>"> <%= title.name %></option>
      <% end %>
    </select>

    <!-- <label for="recipient_name">To</label> -->
    <input class="input_rn" name="recipient_name" placeholder="To">

    <!-- <label for="recipient_email">Email</label> -->
    <input name="recipient_email" placeholder="Email">

    <!-- <label for="sign_off">From</label> -->
    <input class="input_so" name="sign_off"  placeholder="Signature">

    <button class="next">Next</button>
  </div>

  <div class="box">
    <!-- Category and Message Box -->
    <p>STEP TWO</p>
    <label for="category">Category</label>
    <select name="category">
      <% @categories = Favour.all.collect{ |f| f.category }.uniq %>
      <% @categories.each do |category| %>
      <option value="<%= category %>"> <%= category %></option>
      <% end %>
    </select>

    <label for="message">Favour</label>
    <select class="input_msg" name="message">
      <% Favour.all.each do |favour| %>
      <option value="<%= favour.message %>"> <%= favour.message %> </option>
      <% end %>
    </select>
    <!-- <input id="choice-editor"name="favour-input"> -->

    <button class="prev">Back</button>
    <button class="next">Next</button>
  </div>

  <div class="box">
    <p>STEP THREE</p>
    <!-- Background Color Box with Preview -->
    <label for="background_col">Background Colour</label>
    <input class="input_col" type="color" name="background_col" value="<%= @card.background_col %>">


    <button class="prev">Back</button>
    <button class="next">Next</button>
  </div>


<div class="box">
    <p>STEP FOUR</p>

    <!-- SELECTED IMAGE  -->
    <div class="container">
        <div class="chosen-image"><img class="input_img" src=""/></div>
    </div>

    <!-- SEARCH BOX -->
    <div class="search_wrapper">
      <input type="input" id="search_input" placeholder="Find an image.." value="">
      <button class="search_btn">SEARCH</button>
    </div>

    <!-- CAROUSEL -->
    <div class="image-results your-class"></div>
    <div class="space"></div>

    <button class="prev">Back</button>
    <button class="next">Preview</button>
</div>

  <div class="box">
    <p>REVIEW</p>
    <!-- Preview Box -->
    <div class="preview">
      <div  class="background_col preview_col">
        <div class="background_img">
          <img height="400" width="600" class="preview_img"/>
          <div class="card-text">
            <div class="recipient_name preview_rn"><%= @card.recipient_name %></div>
            <div class="card-title preview_t"><%= (Title.find(@card.title_id)).name %></div>
          </div>
        </div>
        <div class="card-message preview_msg"><%= @card.message %></div>
      </div>
      <div class="sign_off"><%= @card.sign_off %></div>


    </div>
    <button class="prev">Back</button>
    <input type="submit" name="action" value="Save">
    <input type="submit" name="action" value="Save and Send">
  </div>
</div>
